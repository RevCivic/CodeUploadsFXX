<Configuration>
    <Appenders>
        <File name="File" fileName="${sys:user.home}/AppData/Roaming/CodeScansLogs/CodeScans2.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>